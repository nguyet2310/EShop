@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">
						<div class="form-group">
							<label>Username</label>
							<input asp-for="Username" class="form-control" />
							<span asp-validation-for="Username" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>
						<div class="form-group">
							<button class="btn btn-default">Login</button>
							<a class="btn btn-primary" asp-action="Create" asp-controller="Account">Tạo tài khoản mới</a>
						</div>
					</form>
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}